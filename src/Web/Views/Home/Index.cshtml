@model HomeViewModel

@{
	ViewData["Title"] = "Home Page";
}

<div class="card mb-3">
	<div class="card-body">
		<form class="row align-items-center">
			<div class="col-auto">
				<label>Category</label>
			</div>
			<div class="col-auto">
				<select class="form-select" asp-items="@Model.Categories" asp-for="@Model.CategoryId">
					<option value="">All</option>
				</select>
			</div>
			<div class="col-auto">
				<label>Brand</label>
			</div>
			<div class="col-auto">
				<select class="form-select" asp-items="@Model.Brands" asp-for="@Model.BrandId" >
					<option value="">All</option>
				</select>
			</div>
			<div class="col-auto">
				<button class="btn btn-primary">Filter</button>
			</div>
		</form>
	</div>
</div>

<div class="row">

	@foreach (var p in Model.CatalogItems)
	{
		<div class="col-sm-6 col-md-4 col-lg-3 mb-4">
				<div class="product-container shadow p-3">
					<div class="product-image">
						<img src="~/img/products/@p.PictureUri" alt="@p.Name" class="w-100" />
					</div>
					<div class="product-name my-2 h6" title="Product Name">
						@p.Name
					</div>
					<div class="d-flex justify-content-between align-items-center">
						@p.Price.ToString("c2")
						<a href="#" class="btn btn-sm btn-success">
							<i class="fa-solid fa-cart-plus"></i>
						</a>
					</div>
				</div>
		</div>
	}
</div>
